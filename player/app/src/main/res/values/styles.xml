<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1AAD19</item>
        <item name="colorPrimaryDark">#232F34</item>
        <item name="colorAccent">#F9AA33</item>
    </style>

    <style name="rank_image">
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="rank_title">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">#161515</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recommendText" parent="primaryText">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

    <style name="personalMyCountTextStyle" parent="android:Theme.Light">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
